<div class="viewport">
  <h1 class="center home_title">Your Flashcards</h1>
  <div class="button-holder">
    <%= link_to "New deck", new_flashcard_deck_path, class: "new_deck_button" %>
  </div>
  <div class="flashcard_decks_container">
    <% if @decks.length > 0 %>
      <ul class="decks">
        <%= render @decks %>
      </ul>
    <% else %>
      <p>You have no flashcard decks at this time. Add some new ones!</p>
    <% end %>
  </div>
</div>
